<h1><%= @conversation.subject %></h1>

<% @conversation.receipts_for(current_user).each do |x| %>
    <div>
        <div><%= x.message.sender.name %> commented: </div>
        <p><%= x.message.body %></p>
    </div>
<%end%>

<%= form_tag conversation_messages_path(@conversation), method: :post do %>
<div>
    <%= text_area_tag :body %>
</div>

    <%= submit_tag %>
<%end%>    