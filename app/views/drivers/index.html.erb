<h1>All Drivers</h1>
<%= form_tag drivers_path, :method => "get" do %>
    <%= label_tag(:search, "Search For Drivers: ") %>
    <%= text_field_tag :search, params[:search] %>
    <%= submit_tag("Search", :email => nil) %>
<% end %>
<ol>
<% @drivers.each do |d| %>
    <li> <%=link_to "#{d.truck_type} - #{d.truck_size}", driver_path(d) %></li>
<% end %>
</ol>